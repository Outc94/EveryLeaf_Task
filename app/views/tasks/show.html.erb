<div class="p-3 mb-2 bg-white text-dark border">

<div class="mx-4 px-4 bg-light">
<p id="notice"><%= notice %></p>

<div class="text-center">
<strong>Created at: </strong>
<%= @task.created_at %>
</div>
<h5 class="my-2">
  <strong><%= @task.title %></strong>
</h5>
<p>Task starts on: <strong><%= @task.start_at%></strong> and it ends on: <strong><%= @task.end_at%></strong><p>
<h6 class="mx-2 bg-white p-2">
  <%= @task.content %>
</h6>
<p>
  <strong>Status: </strong>
  <%= @task.status %><br>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<h6>Labels</h6>
<% @task.labels.each do |label| %>
  <li class="ml-4">
  <%= label.name%>
  </li>
<% end %>

<button class="btn btn-outline-primary"><%= link_to 'Edit', edit_task_path(@task) %></button>
<button class="btn btn-outline-primary"><%= link_to 'Return', tasks_path %></button>
</div>
</div>
